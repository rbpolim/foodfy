{% extends "layout-session.njk" %}

{% block content %}

<div class="container">
  <div class="logo-login">
    <img src="/assets/logo.png" alt="Logomarca">
  </div>

  <form class="reset-password form" action="/admin/reset-password" method="post">
    <div class="header">
      <h3>Nova Senha</h3>
    </div>

    <div class="fields session">
      <div class="item">
        <div>E-mail</div>
        <div class="input">
          <input value="{{ user.email }}" type="email" name="email" placeholder="Digite seu email">
        </div>
      </div>

      <div class="item">
        <div>Nova senha</div>
        <div class="input">
          <input type="password" name="password" placeholder="Digite sua nova senha">
        </div>
      </div>

      <div class="item">
        <div>Repetir senha</div>
        <div class="input">
          <input type="password" name="repeatPassword">
        </div>
      </div>
    </div>

    <div class="footer">
      <button class="button" type="submit">Nova senha</button>
    </div>

    <input type="hidden" name="token" value="{{token}}">
  </form>
</div>

{% endblock %}