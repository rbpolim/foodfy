{% extends "layout-session.njk" %}

{% block content %}

<div class="container">
  <div class="logo-login">
    <img src="/assets/logo.png" alt="Logomarca">
  </div>

  <form class="login form" action="/admin/forgot-password" method="post">
    <div class="header">
      <h3>Esqueceu a senha?</h3>
    </div>

    <div class="fields session">
      <div class="item">
        <div>Email</div>
        <div class="input">
          <input type="email" value="{{ user.email }}" name="email"
            placeholder="Digite seu email para recuperar sua senha">
        </div>
      </div>
    </div>

    <div class="footer">
      <button class="button" type="submit">Recuperar</button>
    </div>
  </form>
</div>

{% endblock %}