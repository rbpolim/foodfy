{% extends "layout-admin.njk" %}

{% block content %}

<div class="container">

  <div class="container-title">
    <h1>Chef: {{ chef.name }}</h1>
    <a class="button" type="submit" href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
  </div>

  <div class="card chef">
    <img src="{{files[0].src}}" alt="foto de perfil">
    <h2>{{chef.name}}</h2>
    <p> {{chef.total_recipes}} receitas</p>
  </div>

  {% if chef.total_recipes >= 1 %}
    <strong> {{chef.total_recipes}} Receita</strong>
  {% else %}
    <strong> {{chef.total_recipes}} Receitas</strong>
  {% endif %}

  <div class="container-recipes">
    {% if chef.total_recipes == 0 %}
      <strong>Este chef n√£o possui nenhuma receita</strong>
    {% else %}
      {% for recipe in recipes %}
      <div class="recipe" id="{{file.recipe_id}}">
        <img src="{{recipe.img}}" alt="{{recipe.recipename}}">

        <div class="recipe-description">
          <strong>{{ recipe.title }}</strong>
          <p>por {{ chef.name }}</p>
          <a href="/admin/recipes/{{ recipe.id }}">Vizualizar</a>
        </div>
      </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

{% endblock %}