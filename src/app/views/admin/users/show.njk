{% extends "layout-admin.njk" %}

{% block content %}

<div class="container">
  <form class="user form" action="/admin/profile?_method=PUT" method="POST">

    <div class="container-title">
      <h1>Bem vindo {{user.name}}</h1>
      <button class="button" type="submit">Salvar</button>
    </div>

    <div class="fields profile">
      <div class="item">
        <div>Nome</div>
        <div class="input">
          <input type="text" name="name" value="{{ user.name }}">
        </div>
      </div>

      <div class="item">
        <div>Email</div>
        <div class="input">
          <input disabled type="email" name="email" value="{{ user.email }}">
        </div>
      </div>

      <div class="item">
        <div>Senha</div>
        <div class="input">
          <input type="password" name="password" placeholder="Digite sua senha para atualizar seu perfil">
        </div>
      </div>
    </div>

    <input type="hidden" name="id" value={{user.id}}>
  </form>
</div>

{% endblock %}